fn recover_test_2() {
    recover (e) {
        return 1
    }
    return crash()
}

assert(recover_test_2() == 1)

fn recover_test_3() {
    recover (e) {
        return 1
    }

    recover (e) {
        return 2
    }

    fn recover_inner() {
        return crash()
    }

    return recover_inner()
}

assert(recover_test_3() == 2)

fn recover_test_4() {
    recover (e) {
        return 2
    }
    
    fn recover_test_inner() {
        recover (e) {
            return crash()
        }

        return crash()
    }
    return recover_test_inner()
}

assert(recover_test_4() == 2)

